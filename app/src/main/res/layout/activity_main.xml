<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_layout"
    android:paddingBottom="@dimen/activity_vertical_layout"
    android:paddingRight="@dimen/activity_horizontal_layout"
    android:paddingLeft="@dimen/activity_horizontal_layout"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_start_service"
        android:text="Start Service"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_start_intent_service"
        android:text="Start Intent Service"

        />

</LinearLayout>